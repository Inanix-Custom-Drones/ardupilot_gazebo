<?xml version='1.0'?>
<sdf version='1.9'>
  <model name='r1_rover_withgimbal'>
  
    <include>
      <uri>model://gimbal_small_2d</uri>
      <name>gimbal</name>
      <pose degrees="true">0 -0.01 0.25 90 0 90</pose>
      <experimental:params>
	      	<sensor element_id="tilt_link::camera">
	      		<plugin name="GstCameraPlugin" action="modify">
	      			<udp_port>5601</udp_port>
	      		</plugin>
	      	</sensor>
	</experimental:params>
    </include>
  
  
    <include>
      <uri>model://r1_rover</uri>
        <experimental:params>
		<plugin element_id="ArduPilotPlugin" action="remove" />
	</experimental:params>
    </include>
    
    <joint name="gimbal_joint" type="revolute">
      <parent>r1_rover::base_link</parent>
      <child>gimbal::base_link_gimbal</child>
      <axis>
        <limit>
          <lower>0</lower>
          <upper>0</upper>
        </limit>
        <xyz>0 0 1</xyz>
      </axis>
    </joint>
    
    <!-- ardupilot plugin -->
    <plugin name="ArduPilotPlugin"
      filename="ArduPilotPlugin">
      <fdm_addr>127.0.0.1</fdm_addr>
      <fdm_port_in>9012</fdm_port_in>
      <fdm_port_out>9013</fdm_port_out> 
      <connectionTimeoutMaxCount>5</connectionTimeoutMaxCount>
      <lock_step>1</lock_step>
      <gazeboXYZToNED degrees="true">0 0 0 180 0 90</gazeboXYZToNED>
      <modelXYZToAirplaneXForwardZDown degrees="true">0 0 0 180 0 0</modelXYZToAirplaneXForwardZDown>
      <imuName>base_link::imu_sensor</imuName>

      <!-- lf_wheel_link -->
      <control channel="0">
        <jointName>r1_rover::motor_0</jointName>
        <useForce>1</useForce>
        <multiplier>46.3</multiplier>
        <offset>-0.5</offset>
        <servo_min>1000</servo_min>
        <servo_max>2000</servo_max>
        <type>VELOCITY</type>
        <p_gain>0.2</p_gain>
        <i_gain>0.06</i_gain>
        <d_gain>0.0001</d_gain>
        <i_max>1</i_max>
        <i_min>-1</i_min>
        <cmd_max>-1.0</cmd_max>
        <cmd_min>0.0</cmd_min>
      </control>

      <!-- lb_wheel_link -->
      <control channel="0">
        <jointName>r1_rover::motor_1</jointName>
        <useForce>1</useForce>
        <multiplier>46.3</multiplier>
        <offset>-0.5</offset>
        <servo_min>1000</servo_min>
        <servo_max>2000</servo_max>
        <type>VELOCITY</type>
        <p_gain>0.2</p_gain>
        <i_gain>0.06</i_gain>
        <d_gain>0.0001</d_gain>
        <i_max>1</i_max>
        <i_min>-1</i_min>
        <cmd_max>-1.0</cmd_max>
        <cmd_min>0.0</cmd_min>
      </control>

      <!-- rf_wheel_link -->
      <control channel="2">
        <jointName>r1_rover::motor_2</jointName>
        <useForce>1</useForce>
        <multiplier>-46.3</multiplier>
        <offset>-0.5</offset>
        <servo_min>1000</servo_min>
        <servo_max>2000</servo_max>
        <type>VELOCITY</type>
        <p_gain>0.2</p_gain>
        <i_gain>0.06</i_gain>
        <d_gain>0.0001</d_gain>
        <i_max>1</i_max>
        <i_min>-1</i_min>
        <cmd_max>-1.0</cmd_max>
        <cmd_min>0.0</cmd_min>
      </control>

      <!-- rb_wheel_link -->
      <control channel="2">
        <jointName>r1_rover::motor_3</jointName>
        <useForce>1</useForce>
        <multiplier>-46.3</multiplier>
        <offset>-0.5</offset>
        <servo_min>1000</servo_min>
        <servo_max>2000</servo_max>
        <type>VELOCITY</type>
        <p_gain>0.2</p_gain>
        <i_gain>0.06</i_gain>
        <d_gain>0.0001</d_gain>
        <i_max>1</i_max>
        <i_min>-1</i_min>
        <cmd_max>-1.0</cmd_max>
        <cmd_min>0.0</cmd_min>
      </control>
      
      <control channel="4">
		<jointName>gimbal::roll_joint</jointName>
		<multiplier>3.14159265</multiplier>
		<offset>-0.5</offset>
		<servo_min>1100</servo_min>
		<servo_max>1900</servo_max>
		<type>COMMAND</type>
		<cmd_topic>/gimbal/cmd_roll</cmd_topic>
		<p_gain>3</p_gain>
	</control>

	<control channel="5">
		<jointName>gimbal::tilt_joint</jointName>
		<multiplier>3.14159265</multiplier>
		<offset>-0.5</offset>
		<servo_min>1100</servo_min>
		<servo_max>1900</servo_max>
		<type>COMMAND</type>
		<cmd_topic>/gimbal/cmd_tilt</cmd_topic>
		<p_gain>3</p_gain>
	</control>
    </plugin>
  </model>
</sdf>
